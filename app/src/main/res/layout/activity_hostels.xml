<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hostels"
    android:background="#15202B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/restoback"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hostels"
                android:textColor="#8899A6"
                android:padding="10dp"
                android:background="#192734"
                android:textSize="20sp"
                android:textAlignment="center"/>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No hostels yet"
            android:id="@+id/nohos"
            android:textColor="#8899A6"
            android:textSize="20sp"
            android:background="#192734"
            android:textAlignment="center"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclerhostels"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_hostel"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>