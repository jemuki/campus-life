<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".singlehostel"
    android:background="#15202B">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/shostoback"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:orientation="horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/hosname2"
            android:textColor="#8899A6"
            android:layout_marginTop="10dp"
            android:text="Kiburi Traders hostels"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#8899A6"
            android:id="@+id/hosloc2"
            android:text="Ruiru next to Total station"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#504D4D"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:id="@+id/hosdesc"
            android:text="This is my desccription"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/hosprice2"
            android:textColor="#8899A6"
            android:layout_marginTop="10dp"
            android:text="5,500/month"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#8899A6"
            android:text="0768992045"
            android:layout_marginTop="10dp"
            android:id="@+id/hosphone"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:textColor="#8899A6"
            android:backgroundTint="#192734"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/hosbtn"
            android:textAllCaps="false"/>



    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>