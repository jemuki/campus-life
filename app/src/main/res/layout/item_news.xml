<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#15202B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#15202B"
        android:paddingTop="10dp">


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/newscover"
                android:padding="5dp"
                app:shapeAppearance="@style/Roundedsquare"
                android:src="@drawable/tesla"
                android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zetech university"
            android:id="@+id/thenews"
            android:textColor="#8899A6"
            android:maxLines="3"
            android:textSize="20sp"
            android:paddingLeft="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_comment_24"
            android:background="@null"
            android:padding="10dp"
            android:id="@+id/comnews"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="14k"
            android:id="@+id/numnewscomments"
            android:paddingLeft="10dp"
            android:textColor="#8899A6"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>